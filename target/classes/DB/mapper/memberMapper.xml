<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.s5.member.MemberDAO">

	<sql id="search">
		like '%'||#{search}||'%'
	</sql>

	<select id="boardList"
		parameterType="com.iu.s5.board.page.Pager"
		resultType="com.iu.s5.member.MemberVO">
		select * from
		(select N.*, rownum R from
		(select * from member where
		<choose>
			<when test="kind == 'id'">
				id
			</when>
			<when test="kind=='name'">
				name
			</when>
			<when test="kind=='email'">
				email
			</when>
			<otherwise>
				phone
			</otherwise>
		</choose>
		<include refid="search"></include>
		) N)
		where R between #{startRow} and
		#{lastRow}
	</select>
</mapper>  
  